x=2;
y=3;
def add(x,y):
    add=x+y
    print("sum:",add)
    return add
add(x,y)
def average(x,y):
    average=(x+y)/2
    print("average:",average)
    return
average(x,y)
def power(x,y):
    power=(x**y)
    print("power:",power)
    return
power(x,y)


